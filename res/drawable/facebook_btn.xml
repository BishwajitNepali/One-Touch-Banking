<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#800517" />
             <gradient  android:angle="-90"  android:startColor="#800517" android:endColor="#800517"  />           
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#800517" />
             <solid  android:color="#800517"/>      
         </shape>
     </item> 
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#3b5998" />
             <gradient  android:angle="-90"  android:startColor="#ff0000" android:endColor="#50ff0000" />           
         </shape>
     </item>
</selector>